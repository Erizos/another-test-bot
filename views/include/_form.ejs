 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-dark">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="">
        </div>
        <div class="form-group">
            <label for="quantity" class="text-dark">Quantity</label>
            <input type="text" name="quantity" value="">
        </div>
        <div class="form-group">
            <label for="price" class="text-dark">Price</label>
            <input type="text" name="price" value="">
        </div>

        <div class="form-group">
            <label for="status" class="text-dark">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Available" >
                <label for="radio-4" class="radio-label">Available</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Unavailable" >
                <label for="radio-5" class="radio-label">Unavailable</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>